<%-include("../partials/header")%>
<h1>My Lists</h1>
<form action="/mylists?_method=DELETE" method="POST">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h3>Edit the list of good things in my life:</h3>
<%user.good.forEach(function(item){%>
	<li><label class="checkbox">
		<input type="checkbox" name="goodcheckbox" value="<%=item._id%>">
		<span><input class="form-control" type="text" name="goodtext" value="<%=item.text%>"></span>
		</label></li>
<%})%>
			</div>
			<div class="col-md-6">
				<h3>Edit the list of positive things about myself:</h3>
<%user.myself.forEach(function(item){%>
	<li><label class="checkbox">
		<input type="checkbox" name="myselfcheckbox" value="<%=item._id%>">
		<span><input class="form-control" type="text" name="myselftext" value="<%=item.text%>"></span>
		</label></li>
<%})%>
			</div>
		</div>
	</div>
	<button class="btn btn-danger" type="submit">Delete Selected</button>
	<button class="btn btn-success" type="submit" formaction="/mylists?_method=PUT">Save Changes</button>
</form>
<form action="/mylists" method="POST">
	<input class="input-list" type="text" name="good" placeholder="List something good in your life">
	<input class="input-list" type="text" name="myself" placeholder="List something good about yourself">
	<button class="btn btn-success" type="submit">Submit</button>
</form>

<%-include("../partials/footer")%>